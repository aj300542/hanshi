[
  {"line": "右汉西岳华山庙碑"},
  {"line": "文字尚完可读"},
  {"line": "其述自汉以来云"},
  {"line": "高祖初兴"},
  {"line": "改秦淫祀"},
  {"line": "太宗承循"},
  {"line": "各诏有司"},
  {"line": "其山川在诸侯者"},
  {"line": "以时祠之"},
  {"line": "孝武皇帝修封禅之礼"},
  {"line": "巡省五岳"},
  {"line": "立宫其下"},
  {"line": "宫曰集灵宫"},
  {"line": "殿曰存仙殿"},
  {"line": "门曰望仙门"},
  {"line": "仲宗之世"},
  {"line": "使者持节"},
  {"line": "岁一祷而三祠"},
  {"line": "后不承前"},
  {"line": "至于亡新"},
  {"line": "渐用丘虚"},
  {"line": "孝武之元"},
  {"line": "事举其中"},
  {"line": "礼从其省"},
  {"line": "但使二千石"},
  {"line": "岁时往祠"},
  {"line": "自是以来"},
  {"line": "百有余年"},
  {"line": "所立碑石文字磨灭"},
  {"line": "延熹四年"},
  {"line": "弘农太守袁逢"},
  {"line": "修废起顿"},
  {"line": "易碑饰阙"},
  {"line": "会迁京兆尹"},
  {"line": "孙府君到"},
  {"line": "钦若嘉业"},
  {"line": "遵而成之"},
  {"line": "孙府君讳璆"},
  {"line": "其大略如此"},
  {"line": "其记汉祠四岳事见本末"},
  {"line": "其集灵宫"},
  {"line": "他书皆不见"},
  {"line": "惟见此碑"},
  {"line": "则余于集录"},
  {"line": "可谓广闻之益矣"},
  {"line": "右汉杨君碑者"},
  {"line": "其名字皆已磨灭"},
  {"line": "惟其铭云明明杨君"},
  {"line": "其姓尚可见尔"},
  {"line": "其官阀始卒"},
  {"line": "则粗可考云"},
  {"line": "孝顺皇帝西巡"},
  {"line": "以椽史召见"},
  {"line": "帝嘉其忠臣之苗"},
  {"line": "器其璵璠之质"},
  {"line": "诏拜郎中"},
  {"line": "迁常山长史"},
  {"line": "换犍为府丞"},
  {"line": "非其好也"},
  {"line": "乃翻然轻举"},
  {"line": "宰司累辟"},
  {"line": "应于司徒"},
  {"line": "州察茂才"},
  {"line": "迁鲖阳侯相"},
  {"line": "金城太守"},
  {"line": "南蛮蠢迪"},
  {"line": "王师出征"},
  {"line": "拜车骑将军从事"},
  {"line": "军还策勋"},
  {"line": "复以疾辞"},
  {"line": "后拜议郎"},
  {"line": "五官中郎将"},
  {"line": "沛相"},
  {"line": "年五十六"},
  {"line": "建宁元年五月癸丑"},
  {"line": "遘疾而卒"},
  {"line": "其终始颇可详见"},
  {"line": "而独其名字泯灭为可惜也"},
  {"line": "是故余尝以谓君子之垂乎不朽者"},
  {"line": "顾其道如何尔"},
  {"line": "不托于事物而传也"},
  {"line": "颜子穷卧陋巷"},
  {"line": "亦何施于事物耶"},
  {"line": "而名光后世"},
  {"line": "物莫坚于金石"},
  {"line": "盖有时而弊也"},
  {"line": "右陆文学传"},
  {"line": "题云自传"},
  {"line": "而曰名羽"},
  {"line": "字鸿渐"},
  {"line": "或云名鸿渐"},
  {"line": "字羽"},
  {"line": "未知孰是"},
  {"line": "然则岂其自传也"},
  {"line": "茶载前史"},
  {"line": "自魏晋以来有之"},
  {"line": "而后世言茶者"},
  {"line": "必本鸿渐"},
  {"line": "盖为茶著书"},
  {"line": "自羽始也"},
  {"line": "至今俚俗卖茶肆中"},
  {"line": "多置一瓷偶人"},
  {"line": "云是陆鸿渐"},
  {"line": "至饮茶客稀"},
  {"line": "则以茶沃此偶人"},
  {"line": "祝其利市"},
  {"line": "其以茶自名久矣"},
  {"line": "而此传载羽所著书颇多"},
  {"line": "云君臣契三卷"},
  {"line": "源解三十卷"},
  {"line": "江表四姓谱十卷"},
  {"line": "南北人物志十卷"},
  {"line": "吴兴历官记三卷"},
  {"line": "湖州刺史记一卷"},
  {"line": "茶经三卷"},
  {"line": "占梦三卷"},
  {"line": "岂止茶经而已也"},
  {"line": "然佗书皆不传"},
  {"line": "独茶经著于世尔"},
  {"line": "右平泉山居草木记"},
  {"line": "李德裕撰"},
  {"line": "余尝读鬼谷子书"},
  {"line": "见其驰说诸侯之国"},
  {"line": "常视其人贤愚材性"},
  {"line": "刚柔缓急"},
  {"line": "而因其好恶喜惧忧乐而捭阖之"},
  {"line": "阳开阴闭"},
  {"line": "变化无穷"},
  {"line": "顾天下诸侯"},
  {"line": "无不在其术中者"},
  {"line": "惟不见其所好者"},
  {"line": "不可得而说也"},
  {"line": "以此知君子宜慎其所好"},
  {"line": "泊然无欲"},
  {"line": "而祸福不能动"},
  {"line": "利害不能诱"},
  {"line": "此鬼谷之术所不能为者也"},
  {"line": "是圣贤之所难也"}
]
