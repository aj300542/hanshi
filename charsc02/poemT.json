[
  {"note": "像虬龙般盘旋的山势"},
  {"note": "攀登如鹘鸟栖息的高危之巢"},
  {"note": "俯视水神冯夷幽深的宫殿"},
  {"note": "那两位客人已无法继续同行"},
  {"note": "忽然发出一声长啸"},
  {"note": "草木都随之震动"},
  {"note": "山谷回响，回应啸声"},
  {"note": "风起水涌，天地共鸣"},
  {"note": "我也不由得感到悲伤"},
  {"note": "心中肃然起敬，略感恐惧"},
  {"note": "这气势令人敬畏，无法久留"},
  {"note": "于是我返回船上"},
  {"note": "任船漂流在江心"},
  {"note": "随船停泊之处而休息"},
  {"note": "此时夜已过半"},
  {"note": "四周寂静无声"},
  {"note": "忽然有一只孤鹤"},
  {"note": "横越江面，从东飞来"},
  {"note": "翅膀如车轮般巨大"},
  {"note": "身披黑裳白衣"},
  {"note": "发出清亮的长鸣"},
  {"note": "掠过我的船，向西飞去"},
  {"note": "不久客人离去"},
  {"note": "我也入睡了"},
  {"note": "梦见二位道士"},
  {"note": "身穿羽衣，轻盈飘动"},
  {"note": "从临皋下方经过"},
  {"note": "向我作揖说：“赤壁之游可曾尽兴？”"},
  {"note": "我问他姓名"},
  {"note": "他低头不语"},
  {"note": "唉"},
  {"note": "啊呀"},
  {"note": "我明白了"},
  {"note": "那夜以前"},
  {"note": "飞鸣而过我的那只鹤"},
  {"note": "莫非就是你？"},
  {"note": "道士回头一笑"},
  {"note": "我也惊醒了"},
  {"note": "打开门查看"},
  {"note": "却不见他的踪影"},
  {"note": "大德年辛丑正月初八"},
  {"note": "明远弟以此纸请我书写两篇赋文"},
  {"note": "我在松雪斋中书写此文"},
  {"note": "并在卷首绘制了苏东坡的画像"},
  {"note": "落款者——赵子昂"}
]
